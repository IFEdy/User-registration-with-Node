extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Log In
                form(method ="POST" action="/login")
                    div.form-group
                        label(for='Email') Email :
                        input#Email.form-control(type='text', placeholder = 'Enter Email', name='Email', class="Email")

                    div.form-group
                        label(for='password') Password : 
                        input#password.form-control(type='password', placeholder = 'Password', name='password', class="password")

                    button.btn.btn-primary(type='submit') Log In