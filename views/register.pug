extends layout

block content
    .main.container.row
        .col-md-6.col-md-offset-3
            h1.display-4.m-b-2 Sign Up

            form(method='POST' action='/register')
                div.form-group
                    label(for='Name') Name:
                    input.Name.form-control(type='text', placeholder = 'Your name', name='Name')
                div.form-group
                    label(for='Email') Email:
                    input.Email.form-control(type='text', placeholder = 'Your Email', name='Email')
                div.form-group
                    label(for='FavouriteBook') Favourite Book:
                    input.FavouriteBook.form-control(type='text', placeholder = 'Your Favourite book', name='FavouriteBook')
                div.form-group
                    label(for='password') password:
                    input.password.form-control(type='password', placeholder = 'Your password', name='password')
                div.form-group
                    label(for='confirm password') confirm password:
                    input.confirmpassword.form-control(type='password', placeholder = 'Confirm passwoed', name='confirmpassword')
                button.btn.btn-primary(type='submit') Sign Up